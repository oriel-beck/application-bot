{
	"extends": "@sapphire/ts-config",
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noUnusedParameters": false,
    "lib": ["dom"],
    // Configure module aliases
    // Keep this in sync with ./.swcrc
    "baseUrl": "./src",
    "paths": {
        "@lib/*": [
            "lib/*"
        ]
    }
  }
}